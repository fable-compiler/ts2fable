{
  "version": "0.2.0",
  "configurations": [
      {
        "type": "pwa-node",
        "request": "launch",
        "name": "Run Mocha Tests",
        "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
        "args":[
          "--no-timeouts",
          "--colors",
          "${workspaceRoot}/build/test/test.js"
        ],
        "sourceMaps": true,
        "outFiles": ["${workspaceRoot}/build/test/**/*.js"],
        "internalConsoleOptions": "openOnSessionStart",
      }
  ]
}
